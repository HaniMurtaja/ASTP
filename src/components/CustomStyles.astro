---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  /* Register your custom font family and tell the browser where to find it. */
  :root {
    --aw-font-sans: 'Shubbak';
    --aw-font-serif: 'Shubbak';
    --aw-font-heading: 'Shubbak';
    --white: #ffffff;
    --black: #000000;
    --aw-color-primary: 187 100% 15%;
    --aw-color-gray: 0 0% 67%; /** -[#ABABAB] */
    --aw-color-white: 0 0% 96%;
    --aw-color-primary-light: 178 100% 32%;
    --aw-color-yellow: 39 58% 62%;
    --aw-color-green: 151 64% 55%;
    --aw-color-secondary: 34 74% 36%; /* Secondary color */
    --aw-color-accent: 34 74% 66%; /* Accent color */
    --aw-color-cta: 0 84% 62%; /** -[#F04F4E] */
    --aw-color-text-heading: 0 0% 0%;
    --aw-color-text-default: 0 0% 6%;
    --aw-color-text-muted: 0 0% 6%;
    --aw-color-bg-page: 0 0% 100%;
    --aw-color-text-page: 0 0% 6%;
    --aw-color-bg-page-dark: 230 83% 7%;
    /* darker shade of 187 100% 16% 1) */
    --aw-color-primary-dark: 187 100% 10%;
  }

  .dark {
    --aw-font-sans: 'Shubbak';
    --aw-font-serif: 'Shubbak';
    --aw-font-heading: 'Shubbak';

    --aw-color-primary: 187 100% 15%;
    --aw-color-gray: 180 1% 70%;
    --aw-color-white: 0 0% 12%;
    --aw-color-primary-light: 178 100% 32%;
    --aw-color-yellow: 39 58% 62%;
    --aw-color-green: 151 64% 55%;
    --aw-color-secondary: 34 74% 36%;
    --aw-color-accent: 34 74% 66%;

    --aw-color-text-heading: 180 4% 97%;
    --aw-color-text-default: 213 41% 93%;
    --aw-color-text-muted: 213 41% 93%;
    --aw-color-bg-page: 228 83% 7%;
    --aw-color-text-page: 180 4% 97%;
    --aw-color-primary-dark: 187 100% 10%;
  }
</style>
