---
import { Icon } from 'astro-icon/components';
import { twMerge } from 'tailwind-merge';

export type Props = {
  section: { sectionable: { label: { [key: string]: string }; icon: string; link: string; color: string } };
  containerClass?:string;
} ;

const locale = Astro.currentLocale || '';
const { section,containerClass="", ...rest } = Astro.props;
---

<a
  href={section?.sectionable?.link?.replace('locale_placeholder', `${locale}`)}
  class={twMerge(
    'px-6 flex items-center gap-2 py-3 text-lg font-semibold text-white bg-primary rounded-md hover:bg-primary-dark',
    containerClass,
    `${section?.sectionable?.color || ''}`,
  )}
  {...rest}
>
  {section?.sectionable?.label?.[locale]}
  {
    section?.sectionable?.icon && (
      <Icon name={`heroicons:${section?.sectionable?.icon?.replace('heroicon-c-', '')}`} class="w-6 h-6 text-white" />
    )
  }
</a>
